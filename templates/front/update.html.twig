{% block title %}{% endblock %}
<link href="../front/assets/css/bootstrap.min.css" rel="stylesheet" />
<link href="../front/assets/css/now-ui-dashboard.min.css?v=1.6.0" rel="stylesheet" />
<link href="../front/assets/demo/demo.css" rel="stylesheet" />

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card" style="margin-top: 150px;max-width: 500px; margin-left: 150px;">
                <div class="card-header text-center"></div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data', 'autocomplete': 'off'}}) }}     
                        <!-- User Image -->
                        {% if app.user is not null and app.user.img is not null %}
                        <img src="{{ asset('uploads/images/' ~ app.user.img) }}" alt="User Image" class="avatar border-gray" style="width:200px; height:200px; margin-top: -10px;">
                        {% endif %} 
                          <div class="input-group input-group-outline mb-2">
                                        <div style="margin-right: 15px;">
                                            {{ form_label(form.img) }}
                                        </div>
                                        <div>
                                            {{ form_widget(form.img) }}
                                        </div>
                                        <div style='color: #FF0000'>
                                            {{ form_errors(form.img) }}
                                        </div>
                                    </div>                 
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'margin-bottom: 10px;', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                            <div style="color: #FF0000;">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': 'margin-bottom: 10px;', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                             <div style="color: #FF0000;">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.prenom) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'style': 'margin-bottom: 10px;', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                             <div style="color: #FF0000;">
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.datenaissance) }}
                            {{ form_widget(form.datenaissance, {'attr': {'class': 'form-control', 'style': 'margin-bottom: 10px;', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                             <div style="color: #FF0000;">
                                {{ form_errors(form.datenaissance) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.numTel) }}
                            {{ form_widget(form.numTel, {'attr': {'class': 'form-control', 'style': 'margin-bottom: 10px;', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                             <div style="color: #FF0000;">
                                {{ form_errors(form.numTel) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.localisation) }}
                            {{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'style': 'margin-bottom: 10px;', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                             <div style="color: #FF0000;">
                                {{ form_errors(form.localisation) }}
                            </div>
                        </div>
                        <div class="text-center">
                            {{ form_row(form.Update, {'attr': {'class': 'btn btn-primary mt-3', 'style': 'background-color: #FEA116; border-radius: 15px; border: none; margin-left: 150px;'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
{% endblock %}
